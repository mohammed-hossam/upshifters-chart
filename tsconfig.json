{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    // "checkJs": true,
    "jsx": "react-jsx",
    // "types": ["cypress"],
    "baseUrl": ".",
    "paths": {
      "assets/*": ["src/assets/*"],
      "styles/*": ["src/styles/*"],
      "data/*": ["src/data/*"],
      "lib/*": ["src/lib/*"],
      "store/*": ["src/store/*"],
      "components/*": ["src/components/*"],
      "contexts/*": ["src/contexts/*"],
      "layouts/*": ["src/layouts/*"],
      "routes/*": ["src/routes/*"],
      "services/*": ["src/services/*"],
      "utils/*": ["src/utils/*"],
      "variables/*": ["src/variables/*"],
      "views/*": ["src/views/*"]
    }
  },
  // "include": ["src", ".eslintrc.cjs"],
  "include": [
    "src",
    ".eslintrc.cjs",
    "vite.config.ts",
    "cypress.config.ts",
    "cypress"
    // "**/*.d.ts",
    // "**/*.ts"
    // "**/*.html",
    // "**/*.scss",
    // "**/*.css"
  ],

  "references": [{ "path": "./tsconfig.node.json" }]
}
